    <script>
        // API Base URL
        const API_BASE = 'http://localhost:8000/api/v1';

        // Initialize Dashboard
        async function initDashboard() {
            try {
                await Promise.all([
                    loadStatistics(),
                    loadProspectTrends()
                ]);
            } catch (error) {
                console.error('Error initializing dashboard:', error);
                // Use mock data if API is not available
                initMockData();
            }
        }

        // Load Statistics
        async function loadStatistics() {
            try {
                const response = await fetch(`${API_BASE}/companies/stats`);
                if (!response.ok) throw new Error('API not available');
                
                const stats = await response.json();
                
                document.getElementById('totalCompanies').textContent = formatNumber(stats.total_companies);
                document.getElementById('todayNet').textContent = stats.today_net;
                document.getElementById('newToday').textContent = '+' + stats.new_today;
                document.getElementById('thisWeek').textContent = stats.this_week;
                document.getElementById('highValue').textContent = formatNumber(stats.high_value);
                document.getElementById('prospectsWeek').textContent = stats.prospects_week;
                document.getElementById('updated').textContent = stats.updated_profiles;
                document.getElementById('updatedWeek').textContent = stats.updated_week;
            } catch (error) {
                console.log('Using mock statistics data');
            }
        }

        // Load Prospect Trends Chart
        async function loadProspectTrends() {
            const ctx = document.getElementById('prospectTrendsChart').getContext('2d');
            
            // Generate mock data for 30 days
            const labels = Array.from({length: 30}, (_, i) => i + 1);
            const hotData = generateTrendData(30, 800, 1600);
            const warmData = generateTrendData(30, 1500, 2500);
            const coldData = generateTrendData(30, 6000, 9000);
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Hot',
                            data: hotData,
                            backgroundColor: 'rgba(232, 168, 94, 0.85)',
                            borderColor: 'rgba(232, 168, 94, 1)',
                            borderWidth: 0,
                            borderRadius: 8
                        },
                        {
                            label: 'Warm',
                            data: warmData,
                            backgroundColor: 'rgba(141, 112, 75, 0.85)',
                            borderColor: 'rgba(141, 112, 75, 1)',
                            borderWidth: 0,
                            borderRadius: 8
                        },
                        {
                            label: 'Cold',
                            data: coldData,
                            backgroundColor: 'rgba(80, 65, 45, 0.85)',
                            borderColor: 'rgba(80, 65, 45, 1)',
                            borderWidth: 0,
                            borderRadius: 8
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(15, 10, 5, 0.95)',
                            titleColor: '#fff',
                            bodyColor: '#e0e0e0',
                            borderColor: 'rgba(232, 168, 94, 0.3)',
                            borderWidth: 1,
                            padding: 14,
                            displayColors: true,
                            cornerRadius: 8,
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + formatNumber(context.parsed.y);
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            stacked: true,
                            grid: {
                                display: false
                            },
                            ticks: {
                                color: '#666',
                                maxTicksLimit: 15
                            }
                        },
                        y: {
                            stacked: true,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.05)',
                                drawBorder: false
                            },
                            ticks: {
                                color: '#666',
                                callback: function(value) {
                                    return formatNumber(value);
                                }
                            }
                        }
                    }
                }
            });
        }

        // Utility Functions
        function formatNumber(num) {
            if (num >= 1000) {
                return (num / 1000).toFixed(1).replace(/\.0$/, '') + 'k';
            }
            return num.toLocaleString();
        }

        function generateTrendData(days, min, max) {
            return Array.from({length: days}, () => 
                Math.floor(Math.random() * (max - min + 1)) + min
            );
        }

        function initMockData() {
            console.log('Dashboard initialized with mock data');
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', initDashboard);

        // Sidebar interactions
        document.querySelectorAll('.sidebar-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelectorAll('.sidebar-item').forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>
