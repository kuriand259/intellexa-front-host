            background: #0a0a0a;
            color: #e0e0e0;
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 70px;
            height: 100vh;
            background: #1a1a1a;
            border-right: 1px solid rgba(255, 255, 255, 0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px 0;
            z-index: 100;
        }

        .sidebar-item {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 10px 0;
            color: #888;
            cursor: pointer;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .sidebar-item:hover,
        .sidebar-item.active {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .sidebar-logo {
            margin-bottom: 30px;
            color: #fff;
            font-size: 24px;
        }

        .sidebar-bottom {
            margin-top: auto;
        }

        .main-container {
            margin-left: 70px;
            padding: 40px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

        .header h1 {
            font-size: 28px;
            font-weight: 400;
            display: flex;
            align-items: center;
            gap: 12px;
            letter-spacing: 0.5px;
        }

        .header h1 i {
            font-size: 28px;
        }

        .header-actions {
            display: flex;
            gap: 15px;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.05);
            color: #999;
        }

        .btn:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: linear-gradient(135deg, rgba(40, 30, 25, 0.6) 0%, rgba(30, 25, 20, 0.8) 100%);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 20px;
            padding: 28px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .stat-card-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
            color: #999;
            font-size: 14px;
        }

        .stat-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
        }

        .stat-icon.buildings {
            background: linear-gradient(135deg, #c9965e 0%, #a67c4a 100%);
            box-shadow: 0 4px 15px rgba(201, 150, 94, 0.3);
        }

        .stat-icon.plus {
            background: linear-gradient(135deg, #8db35f 0%, #6d9347 100%);
            box-shadow: 0 4px 15px rgba(141, 179, 95, 0.3);
        }

        .stat-icon.fire {
            background: linear-gradient(135deg, #e8a85e 0%, #d18a3e 100%);
            box-shadow: 0 4px 15px rgba(232, 168, 94, 0.3);
        }

        .stat-icon.refresh {
            background: linear-gradient(135deg, #6b9cc9 0%, #4a7fad 100%);
            box-shadow: 0 4px 15px rgba(107, 156, 201, 0.3);
        }

        .stat-value {
            font-size: 52px;
            font-weight: 200;
            margin-bottom: 10px;
            letter-spacing: -1px;
        }

        .stat-change {
            font-size: 14px;
            color: #6d9773;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .stat-change i {
            font-size: 12px;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 25px;
            margin-bottom: 40px;
        }

        .chart-card {
            background: linear-gradient(135deg, rgba(40, 30, 25, 0.6) 0%, rgba(30, 25, 20, 0.8) 100%);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(10px);
        }

        .chart-header {
